# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 100

# JSON
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# CSS, SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
