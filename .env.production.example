# ============================================
# PRODUCTION ENVIRONMENT (VERCEL + NEON)
# ============================================
# Configure these variables in Vercel Dashboard:
# https://vercel.com/your-project/settings/environment-variables

# ============================================
# DATABASE (Neon PostgreSQL Cloud)
# ============================================
# Get from: https://console.neon.tech/
# Example: postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# ============================================
# NEXTAUTH (Authentication)
# ============================================
# Generate secure secret: openssl rand -base64 32
# IMPORTANT: Use a strong, unique secret for production
AUTH_SECRET="generate-with-openssl-rand-base64-32"

# Replace with your actual Vercel production domain
NEXTAUTH_URL="https://josepaulo-e-commerce.vercel.app"

# ============================================
# STRIPE (Payment Processing)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use LIVE KEYS for production (not test keys)
STRIPE_SECRET_KEY="sk_live_your_production_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_production_publishable_key"

# Webhook secret from: https://dashboard.stripe.com/webhooks
# Configure webhook URL: https://josepaulo-e-commerce.vercel.app/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_production_webhook_secret"

# ============================================
# CLOUDINARY (Image Storage)
# ============================================
# Get from: https://console.cloudinary.com/
# Use same credentials as development or create production account
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ============================================
# RESEND (Email Service) - OPTIONAL
# ============================================
# Get from: https://resend.com/api-keys
# Configure verified domain for production emails
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# DEPLOYMENT NOTES
# ============================================
# 1. Create Neon PostgreSQL database at https://neon.tech
# 2. Run migrations: npx prisma migrate deploy
# 3. Configure all variables in Vercel Dashboard
# 4. Redeploy application

